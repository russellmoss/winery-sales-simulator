{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/build/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate",
        "content-security-policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.firebaseio.com https://*.firebaseapp.com https://*.anthropic.com https://*.elevenlabs.io;"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CLAUDE_API_KEY": "CLAUDE_API_KEY",
    "ELEVENLABS_API_KEY": "ELEVENLABS_API_KEY",
    "ELEVENLABS_ANN_VOICE_ID": "ELEVENLABS_ANN_VOICE_ID",
    "ELEVENLABS_GABRIELLA_VOICE_ID": "ELEVENLABS_GABRIELLA_VOICE_ID",
    "ELEVENLABS_RUSSELL_VOICE_ID": "ELEVENLABS_RUSSELL_VOICE_ID",
    "ELEVENLABS_MIKE_VOICE_ID": "ELEVENLABS_MIKE_VOICE_ID",
    "REACT_APP_FIREBASE_API_KEY": "FIREBASE_API_KEY",
    "REACT_APP_FIREBASE_AUTH_DOMAIN": "FIREBASE_AUTH_DOMAIN",
    "REACT_APP_FIREBASE_PROJECT_ID": "FIREBASE_PROJECT_ID",
    "REACT_APP_FIREBASE_STORAGE_BUCKET": "FIREBASE_STORAGE_BUCKET",
    "REACT_APP_FIREBASE_MESSAGING_SENDER_ID": "FIREBASE_MESSAGING_SENDER_ID",
    "REACT_APP_FIREBASE_APP_ID": "FIREBASE_APP_ID"
  }
} 