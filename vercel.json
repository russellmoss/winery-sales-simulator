{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/route.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/server.js"
    },
    {
      "source": "/static/(.*)",
      "destination": "client/build/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "client/build/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.firebaseio.com https://*.firebaseapp.com https://*.anthropic.com https://*.elevenlabs.io;"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CLAUDE_API_KEY": "CLAUDE_API_KEY",
    "ELEVENLABS_API_KEY": "ELEVENLABS_API_KEY",
    "ELEVENLABS_ANN_VOICE_ID": "ELEVENLABS_ANN_VOICE_ID",
    "ELEVENLABS_GABRIELLA_VOICE_ID": "ELEVENLABS_GABRIELLA_VOICE_ID",
    "ELEVENLABS_RUSSELL_VOICE_ID": "ELEVENLABS_RUSSELL_VOICE_ID",
    "ELEVENLABS_MIKE_VOICE_ID": "ELEVENLABS_MIKE_VOICE_ID",
    "REACT_APP_FIREBASE_API_KEY": "FIREBASE_API_KEY",
    "REACT_APP_FIREBASE_AUTH_DOMAIN": "FIREBASE_AUTH_DOMAIN",
    "REACT_APP_FIREBASE_PROJECT_ID": "FIREBASE_PROJECT_ID",
    "REACT_APP_FIREBASE_STORAGE_BUCKET": "FIREBASE_STORAGE_BUCKET",
    "REACT_APP_FIREBASE_MESSAGING_SENDER_ID": "FIREBASE_MESSAGING_SENDER_ID",
    "REACT_APP_FIREBASE_APP_ID": "FIREBASE_APP_ID"
  }
} 